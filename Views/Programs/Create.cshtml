@model Gazi_Salon_Takip.Models.EntityFramework.Program

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="alert alert-primary text-center" role="alert">
    <h2>Program Ekle</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-md-12">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.SalonID, "Salon Adı", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9 input-group date">
                @Html.DropDownList("SalonID", null, "Salon Seçiniz", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SalonID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Program_Tarih, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9 input-group date">
                @Html.EditorFor(model => model.Program_Tarih, new { htmlAttributes = new { @class = "form-control datetimepicker2" } })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
                @Html.ValidationMessageFor(model => model.Program_Tarih, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Program_Baslangic, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9 input-group">
                @Html.EditorFor(model => model.Program_Baslangic, new { htmlAttributes = new { @class = "form-control datetimepicker3" } })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-time"></span>
                </span>
                @Html.ValidationMessageFor(model => model.Program_Baslangic, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Program_Bitis, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9 input-group date">
                @Html.EditorFor(model => model.Program_Bitis, new { htmlAttributes = new { @class = "form-control datetimepicker3" } })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-time"></span>
                </span>
                @Html.ValidationMessageFor(model => model.Program_Bitis, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Program_Adı, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9 input-group date">
                @Html.EditorFor(model => model.Program_Adı, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Program_Adı, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Program_Sahip, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9 input-group date">
                @Html.EditorFor(model => model.Program_Sahip, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Program_Sahip, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Program_Aciklama, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9 input-group date">
                @Html.TextAreaFor(model => model.Program_Aciklama, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Program_Aciklama, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <input id="a" type="submit" value="Kaydet" class="btn btn-success btn-lg btn-block" />
            </div>
            <div class="col-lg-6">
                @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-primary btn-lg btn-block" })
            </div>
        </div>
    </div>
}


